@model Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registration";
}

<hgroup>
    <h1>Registration</h1>
    <h2>Please fill in this form to create an account</h2>
</hgroup>

<form method="post" asp-action="Register">
    <label asp-for="Email">Email</label>
    <input asp-for="Email" placeholder="Enter Email" />
    <span asp-validation-for="Email"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password" placeholder="Enter Password" />
    <span asp-validation-for="Password"> </span>

    <label asp-for="ConfirmPassword">Confirm Password</label>
    <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
    <span asp-validation-for="ConfirmPassword"> </span>
        
    <div class="mt-5" id="errorsList" asp-validation-summary="All" ></div>
    
    <button type="submit">Register</button>

</form>

<div class="container signin">
    <p>Already have an account? <a href="/">Login</a>.</p>
</div>


<partial name="~/Views/Shared/_WrappingMarkOnErrorPartial.cshtml" />

