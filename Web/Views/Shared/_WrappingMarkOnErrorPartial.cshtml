<script>
    document.addEventListener("DOMContentLoaded", function () {
        const errorSpans = document.querySelectorAll("span[data-valmsg-for]");

        errorSpans.forEach(function (errorSpan) {
            const errorMessage = errorSpan.textContent.trim();

            if (errorMessage !== "") {
                const markTag = document.createElement("mark");
                markTag.textContent = errorMessage;

                // Replace the span with the mark inside the same parent (li) tag
                errorSpan.parentNode.replaceChild(markTag, errorSpan);
            }
        });

        const errorsList = document.getElementById("errorsList");
        const errorItems = errorsList.querySelectorAll("ul li");

        if (errorItems.length > 1) {
            errorItems.forEach(function (errorItem) {
                // Wrap each li's text content with a mark tag
                const markTag = document.createElement("mark");
                markTag.textContent = errorItem.textContent.trim();

                // Replace the li's text content with the mark
                errorItem.textContent = "";
                errorItem.appendChild(markTag);
            });
        }

    });
</script>
